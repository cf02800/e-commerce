{% extends "base.html.twig" %}

{% block title %}Articles{% endblock %}
{% block body %}
    <section class="section-content padding-y bg">
        <div class="container">
            <a class="btn btn-light" href="{{ path('article_create')}}">Ajouter un produit</a>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Libellé</th>
                    <th scope="col">Description</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Type</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for a in articles %}
                    <tr>
                        <th scope="row">{{ a.id }}</th>
                        <td>{{ a.libelle }}</td>
                        <td>{{ a.description }}</td>
                        <td>{{ a.prixU }}</td>
                        <td>{{ a.typeArticle.libelle }}</td>
                        <td>
                            <a href="{{ path('article_show', {id: a.id}) }}" class="btn btn-light"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('article_edit', {id: a.id}) }}" class="btn btn-light">Modifier</a>
                            <a href="{{ path('article_delete', {id: a.id}) }}" class="btn btn-light" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?')">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}