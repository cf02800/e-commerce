{% extends "base.html.twig" %}

{% block title %}Categories{% endblock %}
{% block body %}
    <button>
        <a href="{{ path('categorie_create')}}">Create</a>
    </button>
    <table>
        <tr>
            <th>N°</th>
            <th>Libellé</th>
            <th></th>
        </tr>
        {% for c in categories %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.libelle }}</td>
                <td>
                    <a href="{{ path('categorie_edit', {id: c.id}) }}">Edit</a>
                    <a href="{{ path('categorie_delete', {id: c.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie?')">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}