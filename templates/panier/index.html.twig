{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>PrixU</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.article.libelle }}</td>
                <td>{{ item.article.prixU }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.article.prixU * item.quantity }}</td>
                <td>
                    <a href='{{ path('panier_delete', {id : item.article.id}) }}' class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan=3></td>
            <td>{{ total }}</td>
            <td>
                <a href='{{ path('commande') }}' class="btn btn-dark btn-sm">
                    Commander
                </a>
            </td>
        </tr>
        </tfoot>
    </table>
{% endblock %}
